<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Realmadrid"
              android:id="@+id/textView" tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="10dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.948"
              app:layout_constraintVertical_bias="0.41"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Barcelona"
              android:id="@+id/textView2"
              app:layout_constraintEnd_toStartOf="@+id/textView"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.192"
              app:layout_constraintVertical_bias="0.402"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/RealGoal" tools:layout_editor_absoluteY="266dp" tools:layout_editor_absoluteX="45dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/BracelonaGoal" tools:layout_editor_absoluteY="266dp" tools:layout_editor_absoluteX="280dp"/>
    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" tools:layout_editor_absoluteY="381dp" tools:layout_editor_absoluteX="168dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Finishbutton" tools:layout_editor_absoluteY="333dp"
            tools:layout_editor_absoluteX="291dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/FinshButton" tools:layout_editor_absoluteY="333dp"
            tools:layout_editor_absoluteX="148dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ResetButton" tools:layout_editor_absoluteY="333dp"
            tools:layout_editor_absoluteX="0dp"/>
    <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp" app:srcCompat="@drawable/ic_soccerball" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.529"/>
    <TextView
            android:text="@android:string/paste_as_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="15dp" tools:layout_editor_absoluteY="233dp"
            tools:layout_editor_absoluteX="50dp"/>
    <TextView
            android:text="@string/TextGoalReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextGoalReal" tools:layout_editor_absoluteY="233dp"
            tools:layout_editor_absoluteX="297dp"/>

</android.support.constraint.ConstraintLayout>